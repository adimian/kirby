{
  "ENVS": {
    "dev": "Development"
  },
  "ENV_VARS": {
    "GLOBAL": {
      "KAFKA_BOOTSTRAP_SERVERS": "localhost:9092",
      "KIRBY_WEB_SERVER": "localhost:8080"
    }
  },
  "JOBS": {
    "sensor_cashregister": {
      "description": "Fetch bakery realtime sales",
      "type": "daemon",
      "package_version": {
        "dev": "1.0.5",
        "test": "0.0.5",
        "prod": "2.0.5"
      },
      "notification_group": "sysadmins",
      "config": {
        "JOB": {
          "CASHREGISTER_TOPIC_NAME": "cashregister"
        },
        "CONTEXT": {
          "dev": {
            "BAKERY_API_BASE": "http://some.server.somewhere:8000"
          },
          "test": {
            "BAKERY_API_BASE": "localhost:8000"
          },
          "prod": {
            "BAKERY_API_BASE": "http://some.server.elsewhere:8000"
          }
        }
      }
    },
    "sensor_orders": {
      "description": "Fetch bakery forecast sales",
      "type": "scheduled",
      "package_version": {
        "dev": "1.0.5",
        "test": "0.0.5",
        "prod": "2.0.5"
      },
      "notification_group": "sysadmins",
      "scheduled_param": {
        "name": "every two minutes",
        "hour": "*",
        "minute": "*/2"
      },
      "config": {
        "JOB": {
          "ORDERS_TOPIC_NAME": "orders"
        },
        "CONTEXT": {
          "dev": {
            "BAKERY_API_BASE": "http://some.server.somewhere:8000"
          },
          "test": {
            "BAKERY_API_BASE": "localhost:8000"
          },
          "prod": {
            "BAKERY_API_BASE": "http://some.server.elsewhere:8000"
          }
        }
      }
    },
    "insert_realtime": {
      "description": "From realtime, push points on the timeseries tables",
      "type": "daemon",
      "package_version": {
        "dev": "1.0.5",
        "test": "0.0.5",
        "prod": "2.0.5"
      },
      "notification_group": "sysadmins",
      "scheduled_param": {
        "name": "every two minutes",
        "hour": "*",
        "minute": "*/2"
      },
      "config": {
        "JOB": {
          "ORDERS_TOPIC_NAME": "orders"
        },
        "CONTEXT": {
          "dev": {
            "BAKERY_API_BASE": "http://some.server.somewhere:8000"
          },
          "test": {
            "BAKERY_API_BASE": "localhost:8000"
          },
          "prod": {
            "BAKERY_API_BASE": "http://some.server.elsewhere:8000"
          }
        }
      }
    }
  },
  "EXTS": [
    "bakery",
    "cashregister",
    "totalfiles"
  ],
  "USERS": [
    {
      "username": "demo",
      "password": "demo",
      "role": "admin"
    }
  ],
  "NOTIFICATION_GROUPS": {
    "sysadmins": [
      "alice@local.local"
    ]
  }
}



